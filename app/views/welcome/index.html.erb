<div id='register-form' class='modal fade' tabindex="-1" role="dialog" 
	aria-labelledby="register-form" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	      <h4 class="modal-title">Participant</h4>
			</div>

	    <div class="modal-body">
	      <%= render 'participants/form3' %>
	    </div>

		</div>
	</div>
</div>

<div id='join-as-coach-form' class='modal fade' tabindex="-1" role="dialog" 
	aria-labelledby="register-form" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">

			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	      <h4 class="modal-title">Coach</h4>
			</div>

	    <div class="modal-body">
	      <%= render 'coaches/form3' %>
	    </div>

		</div>
	</div>
</div>

<div id='notice-modal' class='modal fade' tabindex="-1" role="dialog" 
	aria-labelledby="register-form" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		    <h4 class="modal-title notice-statment">Awesome. Thanks.</h4>
			</div>		
		</div>
	</div>
</div>

<br><br>


<script type="text/javascript">
  var handle_form_response = function(form){

  	var the_modal = form.parents('.modal');
  	var notice = $('#notice-modal');

    form.on("ajax:success", function(event, data, status, xhr){
    	the_modal.modal('hide');
    	notice.modal('show');
    });

    form.on("ajax:error", function(event, xhr, status, error){
    	the_modal.modal('hide');
    });

    form.on("ajax:complete", function(event){
    });
  }

  $(document).ready(function(){
    handle_form_response($('#register-form form'));
    handle_form_response($('#join-as-coach-form form'));
  });
</script>